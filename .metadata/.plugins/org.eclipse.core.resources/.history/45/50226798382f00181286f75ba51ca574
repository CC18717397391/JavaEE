var gulp = require("gulp");
var $ = require("gulp-load-plugins")();

gulp.task("pcCSS", function() {
  return gulp
    .src(["./src/pc/css/*.css"])
    .pipe($.concat("pc.min.css"))
    .pipe($.autoprefixer())
    .pipe($.minifyCss())
    .pipe(gulp.dest("dist/pc/"));
});

gulp.task("pcJS", function() {
  return gulp
    .src(["./src/pc/js/*.js"])
    .pipe($.concat("pc.min.js"))
    .pipe($.uglify())
    .pipe(gulp.dest("dist/pc/"));
});
