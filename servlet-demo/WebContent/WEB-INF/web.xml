<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <listener>
    <listener-class>listener.HttpSessionListenerDemo</listener-class>
  </listener>
  <filter>
    <filter-name>FilterDemo</filter-name>
    <filter-class>filter.FilterDemo</filter-class>
    <init-param>
      <param-name>permit</param-name>
      <param-value>Login;Regist;PIN;Logout;DoGetPost;ServletService;Forward_Jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FilterDemo</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Service</servlet-name>
    <servlet-class>servlet.Service</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Service</servlet-name>
    <url-pattern>/Service</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DoGetPost</servlet-name>
    <servlet-class>servlet.DoGetPost</servlet-class>
    <init-param>
      <param-name>computer</param-name>
      <param-value>LENOVO</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DoGetPost</servlet-name>
    <url-pattern>/DoGetPost</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Forward_Jsp</servlet-name>
    <jsp-file>/ForwardJsp.jsp</jsp-file>
    <init-param>
      <param-name>computer</param-name>
      <param-value>LENOVO</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Forward_Jsp</servlet-name>
    <url-pattern>/Forward_Jsp</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.NullPointerException</exception-type>
    <location>/Error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/Error.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>Base.jsp</welcome-file>
  </welcome-file-list>
</web-app>